<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<TabPane tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jitomate.controller.PrimaryControler">
  <tabs>
    <Tab text="Timer">
      <content>
        <AnchorPane minHeight="0.0" minWidth="0.0">
               <children>
                  <BorderPane prefHeight="182.0" prefWidth="200.0">
                     <bottom>
                        <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
                           <children>
                              <Button fx:id="btnStart" mnemonicParsing="false" onAction="#handleBtnStartAction" text="Start" />
                              <Button mnemonicParsing="false" onAction="#handleBtnStopAction" text="Stop" />
                              <Button mnemonicParsing="false" onAction="#handleBtnSkipAction" text="Skip" />
                           </children>
                           <opaqueInsets>
                              <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                           </opaqueInsets>
                           <BorderPane.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </BorderPane.margin>
                        </HBox>
                     </bottom>
                     <center>
                        <VBox fx:id="" alignment="CENTER" BorderPane.alignment="CENTER">
                           <children>
                              <Label fx:id="displayTime" />
                           </children>
                        </VBox>
                     </center>
                  </BorderPane>
               </children></AnchorPane>
      </content>
    </Tab>
    <Tab text="settings">
      <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
               <children>
                  <GridPane alignment="CENTER" hgap="5.0" vgap="5.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Minutes:" />
                        <TextField fx:id="lblMinutes" text="60" GridPane.columnIndex="1" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </GridPane>
               </children></AnchorPane>
      </content>
    </Tab>
  </tabs>
</TabPane>
